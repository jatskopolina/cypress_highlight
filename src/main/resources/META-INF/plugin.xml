<idea-plugin>
    <id>com.jatskopolina.time-notificator</id>
    <name>time-notificator</name>
    <version>0.2</version>
    <vendor url="https://github.com/jatskopolina"/>

    <description>
        Plugin to notify JavaScript developers about the end of their working day
    </description>

    <depends>com.intellij.modules.lang</depends>
    <depends>JavaScript</depends>

    <actions>
        <group id="MyPlugin.SampleMenu" text="Cypress Highlight" description="Greeting menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="Myplugin.Textboxes" class="com.jatskopolina.HelloAction" text="Hello" description="Says hello"/>
        </group>
    </actions>
    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.jatskopolina.InitializationComponent" />
    </extensions>
    <project-components>
        <component>
            <implementation-class>
                com.jatskopolina.InitializationComponent
            </implementation-class>
        </component>
    </project-components>
</idea-plugin>
